{
    "name": "nathancox/codeeditorfield",
    "description": "A field for editing code in the SilverStripe CMS using Ace Editor (http://ace.c9.io/)",
    "type": "silverstripe-vendormodule",
    "homepage": "https://github.com/nathancox/silverstripe-codeeditorfield",
    "keywords": ["silverstripe", "form", "cms", "formfield"],
    "license": "BSD-3-Clause",
    "authors": [
        {"name": "Nathan Cox","email": "me@nathan.net.nz"}
    ],
    "support": {
        "issues": "https://github.com/nathancox/silverstripe-codeeditorfield/issues"
    },
    "require": {
        "silverstripe/admin": "^1"
    },
	"autoload": {
		"psr-4": {
			"NathanCox\\CodeEditorField\\": "code/"
		}
	},
    "extra": {
        "screenshots": [
            "http://static.flyingmonkey.co.nz/github/silverstripe-codeeditorfield/codeeditorfield-1.png"
        ],
        "expose": [
            "client/css",
            "client/javascript",
            "thirdparty/ace/src-min-noconflict"
        ]
    }
}
